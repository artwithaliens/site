{
  "extends": ["next/core-web-vitals", "artwithaliens"],
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_id", "_raw"]
      }
    ],
    "react/no-danger": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "overrides": [
    {
      "files": ["scripts/*.ts"],
      "rules": {
        "no-console": [
          "error",
          {
            "allow": ["warn", "error"]
          }
        ],
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off"
      }
    }
  ]
}
